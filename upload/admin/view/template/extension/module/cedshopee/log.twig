{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ clear }}" title="{{ button_clear }}" class="btn btn-primary">{{ button_clear }}</a>
        <a onclick="$('form').submit();" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
    
    <div class="container-fluid">
      {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
        
        <div class="panel panel-default">
         <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
         </div>
         <div class="panel-body">
            <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form">
                <div class="table-responsive">
                  <table class="table table-bordered table-hover">
                    <thead>
                      <tr>
                        <td width="1" style="text-align: center;"><input type="checkbox" onclick="$('input[name*=\'selected\']').attr('checked', this.checked);"/>
                        </td>
                        <td class="left">{% if (sort == 'id') %} 
                          <a href="{{ sort_id }}"
                             class="{{ order }}">{{ column_id }}</a>
                          {% else %} 
                          <a href="{{ sort_id }}">{{ column_id }}</a>
                          {% endif %}</td>
                        <td class="left">{% if (sort == 'method') %} 
                          <a href="{{ sort_method }}"
                             class="{{ order }}">{{ column_method }}</a>
                          {% else %} 
                          <a href="{{ sort_method }}">{{ column_method }}</a>
                          {% endif %}</td>
                        <td class="left">{{ column_message }}</td>
                        <td class="left">{{ column_response }}</td>
                        <td class="left">{% if (sort == 'created_at') %} 
                          <a href="{{ sort_created_at }}"
                             class="{{ order }}">{{ column_created_at }}</a>
                          {% else %} 
                          <a href="{{ sort_created_at }}">{{ column_created_at }}</a>
                          {% endif %}</td>

                      </tr>
                      </thead>
                    <tbody>
                    {% if (logs) %} 
                    {% for log in logs %}  
                    <tr>
                      <td style="text-align: center;">{% if (log['selected']) %} 
                        <input type="checkbox" name="selected[]" value="{{ log['id'] }}"
                               checked="checked"/>
                        {% else %} 
                        <input type="checkbox" name="selected[]" value="{{ log['id'] }}"/>
                        {% endif %}</td>
                      <td class="left">{{ log['id'] }}</td>

                      <td class="left">{{ log['method'] }}</td>

                      <td class="left">{{ log['message'] }}</td>

                      <td class="left">{{ log['response'] }}</td>

                      <td class="left">{{ log['created_at'] }}</td>

                    </tr>
                    {% endfor %} 
                    {% else %} 
                    <tr>
                      <td colspan="7" class="center">{{ text_no_results }}</td>
                    </tr>
                    {% endif %} 
                    </tbody>
                  </table>
                </div>
            </form>
            <div class="row">
             <div class="col-sm-6 text-left">{{ pagination }}</div>
             <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
        </div>
        </div>
    </div>
</div>
</div>
{{ footer }} 
