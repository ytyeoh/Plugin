{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
          <a id="form-back" href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-primary">{{ button_cancel }}</a>
        </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
    
    <div class="container-fluid">
      {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {% if error_warning %} {% for key,value in error_warning %} {{ value }} {% endfor %} {% else %} {{ error_warning }} {% endif %} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 

       <div class="panel panel-default">
         <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
         </div>
        
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data" target="_blank" id="form-order">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <td class="left">{% if (sort == 'shopee_order_id') %} 
                                    <a href="{{ sort_shopee_order_id }}"
                                       class="{{ order }}">{{ column_shopee_order_id }}</a>
                                    {% else %} 
                                    <a href="{{ sort_shopee_order_id }}">{{ column_shopee_order_id }}</a>
                                    {% endif %}</td>
                                <td class="left">{% if (sort == 'merchant_sku') %} 
                                    <a href="{{ sort_merchant_sku }}"
                                       class="{{ order }}">{{ column_merchant_sku }}</a>
                                    {% else %} 
                                    <a href="{{ sort_merchant_sku }}">{{ column_merchant_sku }}</a>
                                    {% endif %}</td>
                                <td class="left">{% if (sort == 'reason') %} 
                                    <a href="{{ sort_reason }}"
                                       class="{{ order }}">{{ column_reason }}</a>
                                    {% else %} 
                                    <a href="{{ sort_reason }}">{{ column_reason }}</a>
                                    {% endif %}</td>
                                <td class="left">{{ column_action }}</td>
                            </tr>
                            </thead>
                            <tbody>
                            {% if (orders is not empty) %} 
                            {% for order in orders %} 
                            <tr>
                                <td class="left">{{ order['id'] }}</td>
                                <td class="left">{{ order['merchantsku'] }}</td>
                                <td class="left">{{ order['reason'] }}</td>
                                <td class="left"><a href="{{ order['view'] }}" title="{{ button_edit }}"
                                                    class="btn btn-primary">{{ button_edit }}</a></td>
                            </tr>
                            {% endfor %}
 {% else %} 
 
                            <tr>
                                <td class="center" colspan="8">{{ text_no_results }}</td>
                            </tr>
                            {% endif %} 
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
{{ footer }}