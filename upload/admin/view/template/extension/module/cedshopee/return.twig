{{ header }}{{ column_left }} 
<div id="content">
 <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ insert }}" title="{{ button_insert }}" class="btn btn-primary">Fetch Return</a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
    
    <div class="container-fluid">
        {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 

        <div class="panel panel-default">
         <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
         </div>
           <div class="panel-body">
             <div class="well">
          <div class="row">
          <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label" for="input-id">{{ column_returnsn }}</label>
                 <input type="text" name="filter_returnsn" value="{{ filter_returnsn }}" placeholder="{{ column_returnsn }}" id="input-id" class="form-control" />
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label" for="input-name">{{ column_ordersn }}</label>
                 <input type="text" name="filter_ordersn" value="{{ filter_ordersn }}" placeholder="{{ column_ordersn }}" id="input-name" class="form-control" />
              </div>
            </div>
            <div class="col-sm-4">
               <div class="form-group">
                <label class="control-label" for="input-name">{{ column_reason }}</label>
                 <input type="text" name="filter_reason" value="{{ filter_reason }}" placeholder="{{ column_reason }}" id="input-name" class="form-control" />

                 <a onclick="filter();" id="button-filter" class="btn btn-primary pull-right"><i class="fa fa-search"></i>{{ button_filter }}</a>
              
              <!-- <button type="button" id="button-filter" class="btn btn-primary pull-right"><i class="fa fa-search"></i> {{ button_filter }}</button> -->
              </div>
            </div>
          </div>
        </div>
            <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form">
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                   <!--  <tr class="filter">
                        <td><input type="text" name="filter_returnsn" value="{{ filter_returnsn }}" /></td>
                        <td><input type="text" name="filter_ordersn" value="{{ filter_ordersn }}" /></td>
                        <td align="left"><input type="text" name="filter_reason" value="{{ filter_reason }}"/></td>
                        <td align="right"><a onclick="filter();" class="button">{{ button_filter }}</a></td>
                    </tr> -->
                    <tr>
                        <td class="left">{% if (sort == 'returnsn') %} 
                            <a href="{{ sort_returnsn }}"
                               class="{{ order }}">{{ column_returnsn }}</a>
                            {% else %} 
                            <a href="{{ sort_returnsn }}">{{ column_returnsn }}</a>
                            {% endif %}</td>
                        <td class="left">{% if (sort == 'ordersn') %} 
                            <a href="{{ sort_ordersn }}"
                               class="{{ order }}">{{ column_ordersn }}</a>
                            {% else %} 
                            <a href="{{ sort_ordersn }}">{{ column_ordersn }}</a>
                            {% endif %}</td>
                        <td class="left">{% if (sort == 'reason') %} 
                            <a href="{{ sort_reason }}"
                               class="{{ order }}">{{ column_reason }}</a>
                            {% else %} 
                            <a href="{{ sort_reason }}">{{ column_reason }}</a>
                            {% endif %}</td>
                        <td class="left">{{ column_action }}</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% if (returns) %} 
                    {% for return in returns %} 
                    <tr>
                        <td class="left">{{ return['returnsn'] }}</td>
                        <td class="left">{{ return['ordersn'] }}</td>
                        <td class="left">{{ return['reason'] }}</td>
                        <td class="left"><a href="{{ return['view'] }}">View</a></td>

                    </tr>
                    {% endfor %} {% endif %} 
                    </tbody>
                </table>
              </div>
            </form>
            <div class="row">
             <div class="col-sm-6 text-left">{{ pagination }}</div>
             <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript"><!--
    function filter() {
        url = 'index.php?route=extension/module/cedshopee/return&user_token={{ user_token }}';

        var filter_ordersn = $('input[name=\'filter_ordersn\']').attr('value');

        if (filter_ordersn) {
            url += '&filter_ordersn=' + encodeURIComponent(filter_ordersn);
        }

        var filter_returnsn = $('input[name=\'filter_returnsn\']').attr('value');

        if (filter_returnsn) {
            url += '&filter_returnsn=' + encodeURIComponent(filter_returnsn);
        }

        var filter_reason = $('input[name=\'filter_reason\']').attr('value');

        if (filter_reason) {
            url += '&filter_reason=' + encodeURIComponent(filter_reason);
        }

        location = url;
    }
    //--></script>
{{ footer }}